generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id       String    @id @default(cuid())
  email    String    @unique
  name     String?
  password String
  Project  Project[]
}

model Project {
  id          String     @id @default(cuid())
  name        String
  description String?
  ownerId     String
  tables      String?
  owner       User?       @relation(fields: [ownerId], references: [id])
  Document    Document[]

  @@index([ownerId], map: "ownerId")
}

model Document {
  id        String  @id @default(cuid())
  name      String
  content   String
  projectId String
  filepath  String
  project   Project @relation(fields: [projectId], references: [id])
}